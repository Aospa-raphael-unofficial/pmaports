_arch="armv7"
_mirror="http://dl-4.alpinelinux.org/alpine/"

url="https://musl-libc.org"
license="MIT"
options="!check !strip"
pkgdesc="the musl library (lib c) implementation for $_arch"

_target="$(arch_to_hostspec $_arch)"

source="
	musl-$pkgver-r$pkgrel-$_arch-v3.22.apk::$_mirror/v3.22/main/$_arch/musl-$pkgver-r$pkgrel.apk
	musl-dev-$pkgver-r$pkgrel-$_arch-v3.22.apk::$_mirror/v3.22/main/$_arch/musl-dev-$pkgver-r$pkgrel.apk
