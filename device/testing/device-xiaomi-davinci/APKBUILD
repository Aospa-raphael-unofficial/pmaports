# Maintainer: Jens Reidel <adrian@travitia.xyz>
# Reference: <https://postmarketos.org/devicepkg>

pkgname=device-xiaomi-davinci
pkgdesc="Xiaomi Mi 9T / Redmi K20"
pkgver=4
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	firmware-xiaomi-davinci
	linux-postmarketos-qcom-sm7150
	make-dynpart-mappings
	mkbootimg
	postmarketos-base
	soc-qcom-sm7150
	soc-qcom-sm7150-libssc-180-degrees
	soc-qcom-sm7150-unl0kr-quirk
"
makedepends="devicepkg-dev"
replaces="hexagonrpcd-openrc"
source="
	deviceinfo
	hexagonrpcd.confd
	modules-initfs
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname

	install -Dm644 "$srcdir"/hexagonrpcd.confd \
		"$pkgdir"/etc/conf.d/hexagonrpcd-adsp-sensorspd
}

